from os.path import isfile, join
import string
import sys
import os
import getopt
import random

def read_csv(nf,sep):
    nodes = []
    for l in nf:
        (n,cl) = l.rstrip().split(sep)
        c = 0
        if cl == "0":
            c = -1
        elif cl == "1":
            c = 1
        if c!=0:
            nodes.append((n,c))
    return nodes

# MAIN
def main(argv):
    # defaults
    directory =""
    perc = 0.9
    output = ""
