    lines = [ l.rstrip() for l in intfile.readlines()]
    header = lines[0].split(',')
    lines = lines[1:]
    intervals = []

    # carica in intervals tutti gli intervalli creati
    # in ordine di indice (ie temporale)

    for l in lines:
        llist = l.split(',')
        tmpdict = {}
        i = 0
        for h in header:
            tmpdict[h] = llist[i]
            i+=1
        intervals.append(tmpdict)


